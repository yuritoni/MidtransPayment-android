<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorAccent">@color/red_a200</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorButtonNormal">@color/teal_500</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/colorAccentLight</item>
        <item name="colorButtonNormal">@color/blue_700</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorAccent">@color/blue_a200</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorButtonNormal">@color/pink_500</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorButtonNormal">@color/red_500</item>
    </style>

    <style name="AppTheme.BlueGrey">
        <item name="colorPrimary">@color/blue_grey_500</item>
        <item name="colorAccent">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorButtonNormal">@color/blue_grey_500</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorButtonNormal">@color/indigo_500</item>
    </style>

    <style name="AppTheme.Indigo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Indigo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
